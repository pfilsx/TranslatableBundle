<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Pfilsx\Translatable\Tests\app\Entity\Node" table="node">

        <id name="id" type="integer" column="id"/>
        <field name="user" column="user" type="text" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime"/>
    </entity>
    <entity name="Pfilsx\Translatable\Tests\app\Entity\Translate\NodeTranslate" table="node_translation">
        <id name="id" type="integer" column="id"/>
        <field name="content" column="content" type="text" nullable="true"/>
        <field name="language" column="language" type="text" nullable="false"/>
    </entity>

</doctrine-mapping>
